<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vtm115.alessandrosam.actelemetryfrontend_android" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.vtm115.alessandrosam.actelemetryfrontend_android.ConnectActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vtm115.alessandrosam.actelemetryfrontend_android.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:parentActivityName="com.vtm115.alessandrosam.actelemetryfrontend_android.ConnectActivity"
            android:screenOrientation="sensorLandscape"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vtm115.alessandrosam.actelemetryfrontend_android.ConnectActivity" />
        </activity>
    </application>

</manifest>
